@model PanoLoading.Models.DecisionViewModel
@{
    ViewBag.Title = "About";
}

@if(Model.HasUser && Model.AppUser.Permission == 3)
{
<hr />
    <style>
        .btn:hover{
         background-color: #112d5d;
         color: white;
        }
    </style>
<div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-2">       
           <p><a href="@Url.Action("Administration", "Home")" class="btn btn-default btn-lg">Manage Users</a></p>              
    </div>
    <div class="col-md-2">       
          <p><a href="@Url.Action("ProjectList", "Home")" class="btn btn-default btn-lg">Admin View</a></p>              
    </div>
    <div class="col-md-2">
        <p><a href="@Url.Action("DecisionList", "Home")" class="btn btn-default btn-lg">User View</a></p>
