    <div class="col-md-2">     
           <p><a href="@Url.Action("CreateProject", "Home")" class="btn btn-default btn-lg">Create New Project</a></p>
    </div>
    <div class="col-md-2">
        <p><a href="" class="btn btn-default btn-lg" id="cleanServer">Clean Server</a></p>
    </div>
    <div class="col-md-1">
    </div>
</div>
}

<script>  
    $('#cleanServer').click(function (e) {
        e.preventDefault();
        var str1 = window.location.href.split("Home");
        var href = str1[0] + "Home/CleanServer";
        var href2 = str1[0] + "Home/ExpiredProjectDelete";
        $.getJSON(href, function (data) {
            alert(data);
            $.getJSON(href2, function (data2) {
                alert(data2);
                location.reload();
            });
        });
    });
</script>
