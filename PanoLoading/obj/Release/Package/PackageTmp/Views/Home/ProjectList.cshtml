@using PanoLoading.Models
@model ProjectListViewModel

@{
    ViewBag.Title = "ProjectList";
}

<h2>Projects</h2>

<table class="table">
    <thead>
        <tr>
            <th>Address</th>
            <th>City</th>
            @*<th>ZIP Code</th>*@
            @*<th>State</th>*@
            <th>Status</th>
            <th>Field Person</th>
            <th>Drawer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Projects)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.StatusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fielder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Drawer)
                </td>
                <td>
                    @Html.ActionLink("Slides", "ProjectSlides", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "ProjectEdit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "ProjectDelete", new { id = item.Id })
                </td>
            </tr>
        }
    <tbody>
</table>

<div>
    @Html.ActionLink("Back", "Decision", "Home")
</div>
